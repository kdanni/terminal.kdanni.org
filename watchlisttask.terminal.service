[Unit]
Description=terminal.kdanni.org Watchlist Sync task.
After=network.target

[Service]
Type=simple
User=kiss
Environment="NODE_OPTIONS=--max-old-space-size=1024"
WorkingDirectory=/home/kiss/opt/terminal.kdanni.org
ExecStart=/usr/bin/npm run watch-list:sync
Restart=on-failure
Restart=always
RestartSec=3600
RuntimeMaxSec=6000

[Install]
WantedBy=multi-user.target